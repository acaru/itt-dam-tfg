<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azulPers"
    tools:context=".NewCitaUsuarioActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarAjustes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/azulPers">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarAjustes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/btnVolver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/azulPers"
                        android:tint="@color/white"
                        app:srcCompat="@drawable/ic_volver" />
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            android:orientation="vertical">

            <customfonts.MyTextView_Poppins_Regular
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="@string/dia"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/amarilloPers"
                android:textSize="24sp" />

            <customfonts.EditText_Poppins_Regular
                android:id="@+id/txtVDiaCitaUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/customborder"
                android:backgroundTint="@color/white"
                android:backgroundTintMode="add"
                android:clickable="true"
                android:ems="10"
                android:focusable="false"
                android:inputType="date"
                android:textColor="@color/azulOpacoPers" />

            <customfonts.MyTextView_Poppins_Regular
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hora"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/amarilloPers"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/spnHoraCitaUsuario"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/customborder"
                android:backgroundTint="@color/white"
                android:backgroundTintMode="add"
                android:popupBackground="@color/white" />

            <customfonts.MyTextView_Poppins_Regular
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="@string/servicio"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/amarilloPers"
                android:textSize="24sp" />

            <Spinner
                android:id="@+id/spnServicioCitasUsuario"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/customborder"
                android:backgroundTint="@color/white"
                android:backgroundTintMode="add"
                android:popupBackground="@color/white" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="62dp"
                android:background="@drawable/customborder"
                android:backgroundTintMode="add"
                android:onClick="createCita"
                android:text="Guardar"
                android:textColor="@color/azulOpacoPers"
                app:backgroundTint="@color/white" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>