<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/azulOpacoPers"
    android:backgroundTintMode="add">

    <LinearLayout
        android:id="@+id/baseView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/azulOpacoPers"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            android:background="@color/azulOpacoPers"
            android:foregroundGravity="center_horizontal"
            app:cardBackgroundColor="@color/azulOpacoPers"
            app:contentPadding="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/azulOpacoPers"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgProductoUsuario"
                    android:layout_width="297dp"
                    android:layout_height="173dp"
                    android:layout_margin="5sp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    tools:srcCompat="@drawable/fondo1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2sp"
                    android:background="@drawable/customborder"
                    android:backgroundTint="@color/azulOpacoPers"
                    android:orientation="vertical">

                    <customfonts.MyTextView_Poppins_Regular
                        android:id="@+id/txtVNombreProductoUsuario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="10sp"
                        android:fontFamily="@font/roboto"
                        android:text="Texto"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/amarilloPers"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <customfonts.MyTextView_Poppins_Regular
                        android:id="@+id/txtVPrecioProductoUsuario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="10sp"
                        android:text="Texto"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/amarilloPers"
                        android:textSize="18sp" />
                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>