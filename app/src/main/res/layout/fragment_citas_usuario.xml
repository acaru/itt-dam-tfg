<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    tools:context=".CitasUsuarioFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/azulPers"
        android:clickable="true"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPeluqueriasChooser"
            android:layout_width="match_parent"
            android:layout_height="600sp"
            android:layout_margin="10sp"
            android:background="@color/azulOpacoPers">

        </androidx.recyclerview.widget.RecyclerView>

        <Button
            android:id="@+id/btnCitas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10sp"
            android:background="@drawable/customborder"
            android:text="Nueva Cita"
            android:textColor="@color/azulOpacoPers"
            app:backgroundTint="@color/white"
            app:backgroundTintMode="add" />

    </LinearLayout>

</FrameLayout>