<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".root.EditPeluRootActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/azulPers"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_margin="10sp"
                android:text="@string/nombre"
                android:fontFamily="@font/poppins"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/amarilloPers"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/txtVNombreEditPeluqueria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:background="@drawable/customborder"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppins"
                android:ems="10"
                android:inputType="text"
                android:textColor="@color/azulOpacoPers" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_margin="10sp"
                android:fontFamily="@font/poppins"
                android:text="@string/direccion"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/amarilloPers"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/txtVDireccionEditPeluqueria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:background="@drawable/customborder"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/poppins"
                android:textColor="@color/azulOpacoPers" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_margin="10sp"
                android:fontFamily="@font/poppins"
                android:text="@string/horario"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/amarilloPers"
                android:textSize="24sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10sp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/customborder"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cbLunesEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lunes"
                        android:textColor="@color/amarilloPers" />

                    <CheckBox
                        android:id="@+id/cbMartesEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/martes"
                        android:textColor="@color/amarilloPers" />

                    <CheckBox
                        android:id="@+id/cbMiercolesEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/miercoles"
                        android:textColor="@color/amarilloPers" />

                    <CheckBox
                        android:id="@+id/cbJuevesEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/jueves"
                        android:textColor="@color/amarilloPers" />

                    <CheckBox
                        android:id="@+id/cbViernesEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/viernes"
                        android:textColor="@color/amarilloPers" />

                    <CheckBox
                        android:id="@+id/cbSabadoEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sabado"
                        android:textColor="@color/amarilloPers" />

                </LinearLayout>
            </HorizontalScrollView>

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:background="@drawable/customborder"
                android:onClick="modificarPeluqueria"
                android:text="@string/modificar"
                android:textColor="@color/azulOpacoPers"
                app:backgroundTint="@color/white"
                app:backgroundTintMode="add" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>