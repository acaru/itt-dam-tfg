<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azulPers"
    tools:context=".adminPeluqueria.productos.ProductosFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/azulOpacoPers"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/rvProductos"
            android:layout_width="match_parent"
            android:layout_height="600sp"
            android:layout_margin="10sp"
            android:background="@color/azulPers">

        </androidx.recyclerview.widget.RecyclerView>

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10sp"
            android:background="@drawable/customborder"
            android:text="Nuevo Producto"
            android:textColor="@color/azulOpacoPers"
            app:backgroundTint="@color/white"
            app:backgroundTintMode="add" />

        <Button
            android:id="@+id/btnRedirectFacturas"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="10sp"
            android:background="@drawable/customborder"
            android:text="Facturas"
            android:textColor="@color/azulPers"
            app:backgroundTint="@color/white"
            app:backgroundTintMode="add" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>